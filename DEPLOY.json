{
    "id": "ldr",
    "instances": 1,
    "cpus": 1,
    "mem": 2048,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "146.203.54.165:5000/ldr:latest",
            "forcePullImage": true,
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ]
        },
        "volumes": [
            {"containerPath": "/usr/src/app/hdfs", "hostPath": "/hadoop/hdfs-mount/apps/ldr/uploads", "mode": "RW"}
        ]
    },
    "healthChecks": [
        {
            "protocol": "HTTP",
            "path": "/LDR",
            "gracePeriodSeconds": 10,
            "intervalSeconds": 60,
            "portIndex": 0,
            "timeoutSeconds": 10,
            "maxConsecutiveFailures": 3
        }],
    "labels": {
        "public": "true"
    }
}
