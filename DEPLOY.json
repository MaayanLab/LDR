{
    "instances": 1,
    "cpus": 1,
    "mem": 2048,
    "container": {
        "type": "DOCKER",
        "docker": {
            "image": "maayanlab/ldr:1.5",
            "forcePullImage": true,
            "network": "BRIDGE",
            "portMappings": [
                {
                    "containerPort": 3001,
                    "hostPort": 0,
                    "protocol": "tcp"
                }
            ]
        },
        "volumes": [
            {"containerPath": "/usr/src/app/hdfs", "hostPath": "/hadoop/hdfs-mount/apps/ldr/uploads", "mode": "RW"}
        ]
    },
    "labels": {
        "public": "true"
    }
}
